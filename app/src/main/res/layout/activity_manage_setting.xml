<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".manageSetting.ManageSettingActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnManageWifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Wifi" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnManageBluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Manage Bluetooth" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnManageSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Manage Setting" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnManageGPS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Manage GPS" />

</androidx.appcompat.widget.LinearLayoutCompat>
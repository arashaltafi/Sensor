<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".screenShot.ScreenShotActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTakeScreenShot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take Screen Shot" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDisableTakeScreenShot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Disable Take Screen Shot" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEnableTakeScreenShot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Enable Take Screen Shot" />

</androidx.appcompat.widget.LinearLayoutCompat>